  <scm>
    <connection>scm:git:git://github.com/jacoco/jacoco.git</connection>
    <developerConnection>scm:git:ssh://git@github.com:jacoco/jacoco.git</developerConnection>
    <url>https://github.com/jacoco/jacoco</url>
