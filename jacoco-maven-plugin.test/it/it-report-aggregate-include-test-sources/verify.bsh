import java.io.*;
import org.codehaus.plexus.util.*;

// Check that HTML report was created in jacoco-aggregate directory
File htmlReportIndex = new File( basedir, "report/target/site/jacoco-aggregate/index.html" );
if ( !htmlReportIndex.isFile() ) {
    throw new RuntimeException( "Aggregate HTML report index was not created" );
}

// Check that child report was created
File childReport = new File( basedir, "report/target/site/jacoco-aggregate/child/org.project/index.html" );
if ( !childReport.isFile() ) {
    throw new RuntimeException( "Child aggregate report was not created" );
}

// Check that main source file from child has a report page
File exampleReportFile = new File( basedir, "report/target/site/jacoco-aggregate/child/org.project/AggregateExample.html" );
if ( !exampleReportFile.isFile() ) {
    throw new RuntimeException( "AggregateExample.html (main source) was not created" );
}

// Check that test source file from child has a report page
File exampleTestReportFile = new File( basedir, "report/target/site/jacoco-aggregate/child/org.project/AggregateExampleTest.html" );
if ( !exampleTestReportFile.isFile() ) {
    throw new RuntimeException( "AggregateExampleTest.html (test source) was not created" );
}

// Check that test source file from child has a report page
File testUtilReportFile = new File( basedir, "report/target/site/jacoco-aggregate/child/org.project/AggregateTestUtil.html" );
if ( !testUtilReportFile.isFile() ) {
    throw new RuntimeException( "AggregateTestUtil.html (test source) was not created - includeTestSources may not be working" );
}

// Check that the child index page contains references to all classes
String childContent = FileUtils.fileRead( childReport );
if ( childContent.indexOf( "AggregateExample.html" ) < 0 ) {
    throw new RuntimeException( "Child report does not contain reference to AggregateExample class" );
}
if ( childContent.indexOf( "AggregateExampleTest.html" ) < 0 ) {
    throw new RuntimeException( "Child report does not contain reference to AggregateExampleTest class" );
}
if ( childContent.indexOf( "AggregateTestUtil.html" ) < 0 ) {
    throw new RuntimeException( "Child report does not contain reference to AggregateTestUtil class - includeTestSources may not be working" );
}

// Verify that XML report was also created
File xmlReportFile = new File( basedir, "report/target/site/jacoco-aggregate/jacoco.xml" );
if ( !xmlReportFile.isFile() ) {
    throw new RuntimeException( "Aggregate XML report was not created" );
}

// Check XML content contains all classes
String xmlContent = FileUtils.fileRead( xmlReportFile );
if ( xmlContent.indexOf( "\"org/project/AggregateExample\"" ) < 0 ) {
    throw new RuntimeException( "XML report does not contain AggregateExample class" );
}
if ( xmlContent.indexOf( "\"org/project/AggregateExampleTest\"" ) < 0 ) {
    throw new RuntimeException( "XML report does not contain AggregateExampleTest class" );
}
if ( xmlContent.indexOf( "\"org/project/AggregateTestUtil\"" ) < 0 ) {
    throw new RuntimeException( "XML report does not contain AggregateTestUtil class - includeTestSources may not be working" );
}
