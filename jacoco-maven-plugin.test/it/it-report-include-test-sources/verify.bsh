import java.io.*;
import org.codehaus.plexus.util.*;

// Check that HTML report was created
File htmlReportIndex = new File( basedir, "target/site/jacoco/org.project/index.html" );
if ( !htmlReportIndex.isFile() ) {
    throw new RuntimeException( "HTML report index was not created" );
}

// Check that main source file has a report page
File exampleReportFile = new File( basedir, "target/site/jacoco/org.project/Example.html" );
if ( !exampleReportFile.isFile() ) {
    throw new RuntimeException( "Example.html (main source) was not created" );
}

// Check that test source file has a report page
File exampleTestReportFile = new File( basedir, "target/site/jacoco/org.project/ExampleTest.html" );
if ( !exampleTestReportFile.isFile() ) {
    throw new RuntimeException( "ExampleTest.html (test source) was not created" );
}

// Check that test helper file has a report page
File testHelperReportFile = new File( basedir, "target/site/jacoco/org.project/TestHelper.html" );
if ( !testHelperReportFile.isFile() ) {
    throw new RuntimeException( "TestHelper.html (test source) was not created - includeTestSources may not be working" );
}

// Check that the index page contains references to all classes
String indexContent = FileUtils.fileRead( htmlReportIndex );
if ( indexContent.indexOf( "Example.html" ) < 0 ) {
    throw new RuntimeException( "Index does not contain reference to Example class" );
}
if ( indexContent.indexOf( "ExampleTest.html" ) < 0 ) {
    throw new RuntimeException( "Index does not contain reference to ExampleTest class" );
}
if ( indexContent.indexOf( "TestHelper.html" ) < 0 ) {
    throw new RuntimeException( "Index does not contain reference to TestHelper class - includeTestSources may not be working" );
}

// Verify that XML report was also created
File xmlReportFile = new File( basedir, "target/site/jacoco/jacoco.xml" );
if ( !xmlReportFile.isFile() ) {
    throw new RuntimeException( "XML report was not created" );
}

// Check XML content contains all classes
String xmlContent = FileUtils.fileRead( xmlReportFile );
if ( xmlContent.indexOf( "\"org/project/Example\"" ) < 0 ) {
    throw new RuntimeException( "XML report does not contain Example class" );
}
if ( xmlContent.indexOf( "\"org/project/ExampleTest\"" ) < 0 ) {
    throw new RuntimeException( "XML report does not contain ExampleTest class" );
}
if ( xmlContent.indexOf( "\"org/project/TestHelper\"" ) < 0 ) {
    throw new RuntimeException( "XML report does not contain TestHelper class - includeTestSources may not be working" );
}
